<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_content_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.juniordesign.digitaldoctor.SearchFragment">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/back_icon" />

    <ImageButton
        android:id="@+id/research_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/research_icon" />

    <TextView
        android:id="@+id/questions"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="395dp"
        android:layout_height="126dp"
        android:layout_below="@id/back_button"
        android:layout_alignLeft="@id/back_button"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Which of these categories best describes your symptoms?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/prompts"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/questions"
        android:layout_alignLeft="@id/back_button"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:paddingLeft="4dp"
        android:text="Select Symptom Category"
        app:autoSizeTextType="uniform" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/prompts"
        android:layout_alignLeft="@id/back_button"
        android:layout_alignRight="@id/prompts"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>